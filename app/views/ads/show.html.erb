<div class="container-show">
  <div class ="row mx-0 justify-content-between w-100">
    <div class="ps-5 col-6">
      <div class="card-body">
        <div class="show_title"><%= @ad.name %></div>
        <div class="d-flex">
          <% @ad.photos.each do |photo| %>
            <%= cl_image_tag photo.key, class:"photo-ad" %>
          <% end %>
          <div class="m-2">
          <p><strong>Category : </strong> <%= @ad.category %></p>
          <p><strong>Description : </strong> <%= @ad.description %></p>
          <p><strong>Address : </strong><%= @ad.address %></p>
          <p><strong>Price per day :</strong><%= @ad.price %> â‚¬</p>
          </div>
        </div>
      </div>
      <br>
      <p><strong>Book it !</strong></p>
      <%= render 'shared/form' %>
      <br>
      <div>
      <%= link_to "Back to Ads", ads_path, class:"btn btn-outline-dark" %>
      </div>
    </div>
    <div class="col-6 map px-0">
      <div data-toggle-target="togglableElement map" style="border-radius: 20px; width: 100%; height: 100%;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
      </div>
    </div>
  </div>
</div>
