
<div class="container">
<div class="container-form">
  <h5><i class="fa-solid fa-circle-plus"></i> Cr√©er mon annonce</h5>
  <br>
  <div>
    <%= simple_form_for(@ad) do |f| %>
      <div class="d-flex flex-row justify-content-between">
        <%= f.input :name %>
        <%= f.input :category, collection: Ad::CATEGORIES %>
      </div>
      <div class="d-flex flex-row justify-content-between">
      <%= f.input :price %>
      <%= f.input :address %>
      </div>
      <%= f.input :description %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.input :availability, as: :date %>
      <div class="text-center"> <%= f.button :submit, "C'est parti !", class:"btn-blue" %></div>
    <% end %>
  </div>
  <br>
</div>
