
<div class="container">
<div class="container-form">
  <h5><i class="fa-solid fa-circle-plus"></i> Cr√©er mon annonce</h5>
  <br>
  <div>
    <%= simple_form_for(@ad) do |f| %>
      <div class="d-flex justify-content-between" style="gap: 40px">
      <div class="flex-fill">
        <label for="name">Nom</label>
        <%= f.input :name %>
      </div>
       <div class="flex-fill"> <%= f.input :category, collection: Ad::CATEGORIES %> </div>
      </div>
      <div class="d-flex justify-content-between" style="gap: 40px">
        <div class="flex-fill" > <%= f.input :price %> </div>
        <div class="flex-fill"> <%= f.input :address %> </div>
      </div>
      <%= f.input :description %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <div class="text-center"> <%= f.button :submit, "C'est parti !", class:"btn-blue" %></div>
    <% end %>
  </div>
  <br>
</div>
