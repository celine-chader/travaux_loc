
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_path "homepage_banner.jpg", height: 300, width: 400, crop: :fill %>')">
  All ads
</div>


  <%= simple_form_for :category_id, url: ads_path, method: :get, class: "simple_form search" do |f|%>
    <div class="search-form-control form-group my-3">
        <%= f.input :category_id, placeholder: "catÃ©gories", collection: Ad::CATEGORIES %>
        <button name="button" type="submit" class="btn btn-flat mt-4">
          <i class="fas fa-search"></i> Search
        </button>
    </div>
  <% end %>


  <div class="row">
    <% @ads.each do |ad| %>
      <div class="col-12 col-sm-6 col-md-4 my-3">
        <%= link_to ad_path(ad), style:"text-decoration: none" do %>
          <div class="card-product">
            <% if ad.photos.first %>
              <%= cl_image_tag ad.photos.first.key, height: 300, width: 400, crop: :fill %>
            <% else %>
              <img src="https://source.unsplash.com/random/?Dog/" alt="", height=300, width=400>
            <% end %>
            <div class="card-product-infos">
              <h2> <%= ad.name %> </h2>
              <p> <%= ad.category %> </p>
              <p><%= ad.description %> <strong>relevant info</strong> only.</p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>


<div data-controller="toggle" class="start-50 translate-middle position-fixed bottom-0 mt-5">
  <button data-action="click->toggle#fire" class="btn btn-dark">Afficher la carte</button>
  <div data-toggle-target="togglableElement" class="d-none" style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
