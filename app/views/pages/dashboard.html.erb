<div class="container">

  <div class="d-flex p-2">
  <div class="col-2">
    <%= current_user.first_name %>
    <%= current_user.last_name %>

  </div>
    <ol class="col-5">
      <h2 class="text-center">My ads</h2>
      <br>
      <div >
        <% @ads.each do |ad| %>
          <li>
            <div class="card-product">
              <ul>
                <li><% ad.photos.each do |photo| %>
                    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
                    <% end %>
                </li>
                <div class="card-product-infos">
                  <h5><strong><%= ad.name %></strong></h5>
                  <li>Category: <%= ad.category %></li>
                  <li>Description: <%= ad.description %></li>
                  <li>Availability: <%= ad.availability %></li>
                  <li>Created at: <%= ad.created_at %></li>
                  <li>Updated at: <%= ad.updated_at %></li>
                </div>
              </ul>
            </div>
          </li>
          <hr>
        <% end %>
      </div>
    </ol>

  <%# <div class="card-product">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <div class="card-product-infos">
      <h2>Product name</h2>
      <p>Product description with <strong>relevant info</strong> only.</p>
    </div>
  </div> %>

    <ol class="col-5">
      <h2 class="text-center">My bookings</h2>
      <br>
      <div>
        <% @bookings.each do |booking| %>
          <li>
            <ul>
              <h5><strong>Ad reference: #<%= booking.ad_id %></strong></h5>
              <li>Status: <% if booking.status %>
                  <%= "Confirmed" %>
                  <% else %>
                  <%= "Pending" %>
                <% end %></li>
              <li>Availability: <%= booking.availability %></li>
              <li>Created at: <%= booking.created_at %></li>
              <li>Updated at: <%= booking.updated_at %></li>
            </ul>
          </li>
          <hr>
        <% end %>
      </div>
    </ol>
  </div>

</div>
