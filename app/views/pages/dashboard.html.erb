
<div class="container">


  <div class="d-flex p-2">
  <div class="col-2">
    <%= current_user.first_name %>

  </div>
    <ol class="col-5">
      <h2 class="text-center">My ads</h2>
      <br>
      <div>
        <% @ads.each do |ad| %>
          <li>
            <ul>
              <h5><strong><%= ad.name %></strong></h5>
              <li>Category: <%= ad.category %></li>
              <li>Description: <%= ad.description %></li>
              <li>Availability: <%= ad.availability %></li>
              <li>Created at: <%= ad.created_at %></li>
              <li>Updated at: <%= ad.updated_at %></li>
            </ul>
          </li>
          <hr>
        <% end %>
      </div>
    </ol>

    <ol class="col-5">
      <h2 class="text-center">My bookings</h2>
      <br>
      <div>
        <% @bookings.each do |booking| %>
          <li>
            <ul>
              <h5><strong>Ad reference: #<%= booking.ad_id %></strong></h5>
              <li>Status: <% if booking.status %>
                  <%= "Confirmed" %>
                  <% else %>
                  <%= "Pending" %>
                <% end %></li>
              <li>Availability: <%= booking.availability %></li>
              <li>Created at: <%= booking.created_at %></li>
              <li>Updated at: <%= booking.updated_at %></li>
            </ul>
          </li>
          <hr>
        <% end %>
      </div>
    </ol>
  </div>

</div>

    <%# t.date "availability"
    t.boolean "status", default: false
    t.bigint "user_id", null: false
    t.bigint "ad_id", null: false
    t.datetime "created_at", null: false
    t.datetime "updated_at", null: false
    t.index ["ad_id"], name: "index_bookings_on_ad_id"
    t.index ["user_id"], name: "index_bookings_on_user_id" %>
