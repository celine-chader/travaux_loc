<div>
<%= simple_form_for [@ad, @booking], data: { controller: 'datepicker' } do |f| %>
    <%= f.input :start_date, as: :string, label: false, input_html: { class:"d-none", data: { datepicker_target: "startTime" } } %>
  <%= f.input :end_date, as: :string, label: false, input_html: { class:"d-none", data: { datepicker_target: "endTime" } } %>
  <%= f.submit 'Schedule your appointment' %>
<% end %>
</div>
